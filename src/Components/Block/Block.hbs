{{#*inline "cardbody"}}
  {{#if title }}<h3 class="card-title{{#if bgcolor}} text-white{{/if}}">{{ title }}</h3>{{/if}}
  {{#if subtitle }}<h5 class="card-subtitle{{#if bgcolor}} text-white{{/if}}">{{ subtitle }}</h5>{{/if}}
  <p class="card-text{{#if bgcolor}} text-white{{/if}}">{{{ contents }}}</p>
{{/inline}}
<div class="card card-{{variant}}">
{{#if img }}
  {{#if img.position.left }}
    <div class="row g-0">
      <div class="col-xs-12 col-md-{{ columns.img }} position-relative overflow-hidden">
        <img src="{{ img.src }}" alt="{{ img.alt }}" class="card-img position-absolute">
      </div>
      <div class="col-xs-12 col-md-{{ columns.contents }}">
        <div class="card-body p-3">{{> cardbody }}</div>
      </div>
    </div>
  {{/if}}
  {{#if img.position.right }}
    <div class="row g-0">
      <div class="col-xs-12 col-md-{{ columns.img }} order-md-2 position-relative overflow-hidden">
        <img src="{{ img.src }}" alt="{{ img.alt }}" class="card-img position-absolute">
      </div>
      <div class="col-xs-12 col-md-{{ columns.contents }} order-md-1">
        <div class="card-body p-3">{{> cardbody }}</div>
      </div>
    </div>
  {{/if}}
  {{#if img.position.top }}
    <img src="{{ img.src }}" alt="{{ img.alt }}" class="card-img-top">
    <div class="card-body p-3">{{> cardbody }}</div>
  {{/if}}
  {{#if img.position.bottom }}
    <div class="card-body p-3">{{> cardbody }}</div>
    <img src="{{ img.src }}" alt="{{ img.alt }}" class="card-img-bottom">
  {{/if}}
  </div>
{{else}}
{{> cardbody }}
{{/if}}

